<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>fund your wallet</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
</head>
<body>
  
  <div class="container d-flex p-2 ">

 <form >
  <script src="https://checkout.flutterwave.com/v3.js"></script>
  <input type="text" name="email" id="email" placeholder="please put the email used for registration" required>
  <input type="text" name="phone" id="phone" placeholder="please put the phone used for registration" required>
  <input type="text" name="amount" id="amount" placeholder="Amount Here" required>
  <button type="button" onClick="makePayment()"> Fund Wallet!!  </button>
  </form >
    
  </div>
 
</body>
</html>


<script>
    function makePayment() {
      const phone_number = document.getElementById('phone').value
      const email = document.getElementById('email').value
      const amount = document.getElementById('amount').value
      FlutterwaveCheckout({
        public_key: "FLWPUBK_TEST-8e6858868683e5fb3e1eda62f8b77765-X",
        tx_ref: Date.now(),
        amount,
        currency: "NGN",
        country: "NG",
        payment_options: "card",
        redirect_url: "http://localhost:5000/fund-wallet",
        customer: {
          email,
          phone_number,
        },
        callback: function (data) {
          console.log(data);
        },
        onclose: function () {
          // close modal
        },
        customizations: {
          title: "Fund Wallet Now",
          description: "Airtime Payment",
          logo: "https://cdn.iconscout.com/icon/premium/png-256-thumb/payment-2193968-1855546.png",
        },
      });
    }
  </script>
  